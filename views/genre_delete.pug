extends layout

block content
    h1 Delete Genre: #{genre.name}
    div(style='margin-left:20px;margin-top:20px')
        
        if (genre_books.length>0)
            p #[strong Delete the following books or Update its genres before attempting to delete this genre:]
            dl
                each book in genre_books
                    dt 
                        a(href=book.url) #{book.title}
                    dd #{book.summary}
        else
            p #[strong Do you really want to delete this genre?]
            form(method='POST' action='')
                input#genreid.form-control(type='hidden' name='genreid' required value=genre._id)
                button.btn.btn-primary(type='submit') Delete
